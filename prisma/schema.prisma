generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Response {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  date       DateTime @db.Date
  diningHall String
  dislikes   Int
  likes      Int
  mealPeriod String
  response   String
  tags       String[]
  userId     String   @db.ObjectId
  value      String
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String
  likedResponses String[]
  passwordHash   String
  username       String
}
